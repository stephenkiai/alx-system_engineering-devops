#!/usr/bin/env bash
#redirection

sudo apt-get update
sudo apt-get -y install nginx
sudo ufw allow 'Nginx HTTP'
# Replace default Nginx index page
echo 'Hello World!' > /var/www/html/index.nginx-debian.html

# Configure redirection in the Nginx default site configuration
REDIRECT_CONFIG="\
location /redirect_me {\n\
    return 301 http://www.youtube.com/;\n\
}"

sudo sed -i "/location \/ {/,/}/{//!d}; /location \/ {/a $REDIRECT_CONFIG" /etc/nginx/sites-available/default

sudo service nginx restart
